<!DOCTYPE html>
<html lang="en">
<!-- HEAD -->
<%- include('../partials/headUsers.ejs') %>
  <%- include('../partials/headProducts.ejs') %>


    <body>
      <!-- HEADER -->
      <%- include('../partials/header.ejs') %>
        <!-- Container -->

        <main>
          <div class="contenedor">
            <div class="img-contenedor">
              <img id="producto" src="/imgUsers/<%= user.avatar %> ">
            </div>
            <div class="description">
              <h2>Bienvenido, <%= user.user %> üòÅ</h2>
              <div class="titulo-descripcion">
                <div class="formulario2">
                  <div class="inputBxUser">
                    <label for="name">Nombre:</label>
                    <div class="inputIcon">
                      <p>
                        <%= user.name %>
                      </p>
                    </div>
                  </div>
                  <div class="inputBxUser">
                    <label for="lastName">Apellido:</label>
                    <div class="inputIcon">
                      <p>
                        <%= user.lastName %>
                      </p>
                    </div>
                  </div>
                  <div class="inputBxUser">
                    <label for="email">Email:</label>
                    <div class="inputIcon">
                      <p>
                        <%= user.email %>
                      </p>
                    </div>
                  </div>
                  <div class="inputBxUser">
                    <label for="userType">Tipo de usuario:</label>
                    <div class="inputIcon">
                      <% if (user.userType == 1) { %>
                        <p>
                          Administrador
                        </p>
                      <% } else { %>
                        <p>
                          Com√∫n
                        </p>
                      <% } %>
                    </div>
                  </div>
                </div>
              </div>
              <div>
                <div class="botones">
                  <button class="button-cesta">
                    <a href="/users/profile/edit" class="enlaceCarrito">Editar Perfil</a>
                  </button>
                  <% if (locals.userLogged.userType == 1) { %>
                    <button class="button-cesta">
                      <a href="/users/register/new" class="enlaceCarrito">Crear usuario</a>
                    </button>
                    <button class="button-cesta">
                      <a href="/users/list" class="enlaceCarrito">Listar usuarios</a>
                    </button>
                  <% } %>
                  
                </div>
              </div>
            </div>
        </main>

        <!-- //Container -->
        <%- include('../partials/footer.ejs') %>
    </body>
</html>